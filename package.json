{
  "name": "react-webpack-boilerplate-by-adrian",
  "version": "0.1.0",
  "description": "React 16 and Webpack 4 setup with React-Router, MobX state management, i18n localisation, Hot Module Reload, Node Express server, ES6 transpiling, and tools for code quality and testing.",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --mode production --config ./config/webpack.prod.js --color --progress",
    "lint": "eslint app/ || true",
    "start": "cross-env NODE_ENV=development node server",
    "start:dev": "yarn run start",
    "start:prod": "cross-env NODE_ENV=production node server",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "validate": "yarn run lint && yarn run test"
  },
  "keywords": [
    "react",
    "webpack",
    "hmr",
    "react-router",
    "mobx",
    "i18n",
    "babel",
    "eslint",
    "sasslint",
    "jest",
    "react-testing-library"
  ],
  "author": "Adrian von Gegerfelt <adrian@designbyadrian.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "eslint": "5.6.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-import-resolver-babel-module": "^5.0.0-beta.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.11.1",
    "friendly-errors-webpack-plugin": "1.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "23.6.0",
    "react-testing-library": "^5.2.1",
    "webpack-bundle-analyzer": "3.0.2",
    "webpack-dev-middleware": "3.4.0",
    "webpack-hot-middleware": "2.24.2"
  },
  "dependencies": {
    "@babel/core": "7.1.0",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/plugin-proposal-decorators": "7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0",
    "@babel/plugin-syntax-dynamic-import": "7.0.0",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-react": "7.0.0",
    "autoprefixer": "8.1.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-loader": "8.0.2",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-react-css-modules": "3.4.2",
    "babel-plugin-transform-react-remove-prop-types": "0.4.18",
    "bootstrap": "4.1.3",
    "bytes": "3.0.0",
    "chalk": "2.3.1",
    "compression": "1.7.2",
    "cross-env": "5.1.3",
    "css-loader": "1.0.0",
    "dotenv-webpack": "1.5.5",
    "express": "4.16.2",
    "file-loader": "1.1.11",
    "history": "4.7.2",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.0.7",
    "i18next": "10.5.0",
    "i18next-browser-languagedetector": "2.1.0",
    "i18next-express-middleware": "1.1.1",
    "i18next-node-fs-backend": "1.0.0",
    "i18next-xhr-backend": "1.5.1",
    "image-webpack-loader": "4.3.1",
    "ip": "1.1.5",
    "isdev": "1.0.1",
    "mini-css-extract-plugin": "0.4.1",
    "minimist": "1.2.0",
    "mobx": "5.1.2",
    "mobx-react": "5.2.8",
    "mobx-react-router": "4.0.5",
    "node-notifier": "5.2.1",
    "node-sass": "4.9.3",
    "postcss-loader": "3.0.0",
    "postcss-sass": "0.3.0",
    "prop-types": "15.6.1",
    "react": "16.5.0",
    "react-dom": "16.5.0",
    "react-helmet": "5.2.0",
    "react-hot-loader": "4.3.11",
    "react-i18next": "7.5.0",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-switch": "2.3.0",
    "sass-loader": "7.1.0",
    "script-loader": "0.7.2",
    "style-loader": "0.23.0",
    "terser-webpack-plugin": "1.1.0",
    "webpack": "4.20.1",
    "webpack-cli": "3.1.1",
    "webpack-merge": "4.1.4",
    "whatwg-fetch": "2.0.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "plugins": [
      "react",
      "jsx-a11y"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "import/no-extraneous-dependencies": "off",
      "indent": [
        "warn",
        2,
        {
          "SwitchCase": 1,
          "VariableDeclarator": {
            "var": 2,
            "let": 2,
            "const": 3
          }
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 100,
          "ignoreTrailingComments": true
        }
      ],
      "no-console": "off",
      "no-underscore-dangle": "off",
      "one-var": [
        "error",
        {
          "var": "never",
          "let": "always",
          "const": "always"
        }
      ],
      "react/forbid-prop-types": "off",
      "react/destructuring-assignment": [
        "warn",
        "never"
      ],
      "react/require-default-props": "warn",
      "react/jsx-filename-extension": "off",
      "react/jsx-wrap-multilines": "off"
    },
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    }
  }
}
